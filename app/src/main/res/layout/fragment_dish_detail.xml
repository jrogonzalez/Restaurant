<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.jrestaurant.jro.jrestaurant.activity.MainActivity"
        android:weightSum="1"
        android:orientation="vertical">


    <ImageView
            android:layout_width="348dp"
            android:layout_height="151dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="0.19"/>

    <TextView
            android:text="Dish Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_name_lbl"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_dish_name"
            android:layout_weight="0.26"/>

    <TextView
            android:text="Ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_ingredients_lbl"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_ingredients"
            android:layout_weight="0.26"/>

    <TextView
            android:text="Allergens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_allergens_lbl"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_allergens"
            android:layout_weight="0.21"/>

    <TextView
            android:text="Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_price_lbl"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_price"
            android:layout_weight="0.21"/>

    <TextView
            android:text="Observations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_detail_observations_lbl"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/dish_detail_observations"
            android:background="@drawable/text_view_border"
            />


    <Button
            android:id="@+id/addDish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addDish"
            android:layout_gravity="center_horizontal"
            />
</LinearLayout>
